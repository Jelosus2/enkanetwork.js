{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",                                
    "rootDir": "src",                                  
    "resolveJsonModule": true,
    "declaration": true,                            
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
